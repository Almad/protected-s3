extends layout

block content
  h1= title
  p Welcome to #{title}

  #container.col

  p Please log in with the SSO account on the <b>#{domain}</b> domain to see the content of the pages

  if useGoogleSso
    a(href="/auth/google") Sign In with Google

  if useOracleSso
    a(href="/auth/oracle") Sign In with Oracle
